<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.QiblatActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/btn_show_notif">
        <Button
            android:id="@+id/btn_add_jam"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="+"/>
        <TextView
            android:id="@+id/tv_jam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="0"/>
        <Button
            android:id="@+id/btn_min_jam"
            android:layout_width="40dp"
            android:layout_marginEnd="20dp"
            android:layout_height="wrap_content"
            android:text="-"/>
        <Button
            android:id="@+id/btn_add_menit"
            android:layout_width="40dp"
            android:layout_marginStart="20dp"
            android:layout_height="wrap_content"
            android:text="+"/>
        <TextView
            android:id="@+id/tv_menit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="0"/>
        <Button
            android:id="@+id/btn_min_menit"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="-"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_show_notif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Notification"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/accent" />

    <Button
        android:id="@+id/btn_pick_sound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Pick Sound"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/btn_show_notif"
        app:layout_constraintStart_toStartOf="@id/btn_show_notif"
        app:layout_constraintEnd_toEndOf="@id/btn_show_notif"/>

    <TextView
        android:id="@+id/tv_data"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/btn_pick_sound"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>